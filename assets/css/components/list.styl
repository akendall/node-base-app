@require "color.styl"

.item
  background: $color.white;
  border-radius: 4px;
  margin-bottom: 3px;
  padding-right: 30px
  border: 1px solid $color.white
  font-weight: normal
  padding-left: 38px
  height: 38px
  padding: 0 30px 0 38px
  cursor: pointer

  & /deep/ core-icon.edit-icon
    margin: 0 10px 0 10px
    display: none
    height: 18px
    width: 18px

  &.core-selected
    background: transparent;
    font-weight: normal
    padding-left: 0

  &.core-selected /deep/ core-icon
    display: block



.int .item.core-selected
  border-color: $color.green

.beta .item.core-selected
  border-color: $color.blue

.prod .item.core-selected
  border-color: $color.red

<div class="container page-container">
  <section class="quote-container">
    <h1 class="quote"> {{quote}} </h1>
    <span class="author-quote">{{author}}</span>
  </section>
  <div class=container-inner>
    <div class="container-half">
      <div class="slider-container slider">
        <img ng-repeat="slide in slides" class="slide slide-animation nonDraggableImage"
             ng-swipe-right="nextSlide()" ng-swipe-left="prevSlide()"
             ng-hide="!isCurrentSlideIndex($index)" ng-src="img/{{slide.src}}"/>
               <!-- the imgages are too big for the slider currently and some are smaller -->

        <a class="arrow prev" href="#" ng-click="nextSlide()"></a>
        <a class="arrow next" href="#" ng-click="prevSlide()"></a>
        <nav class="slider-nav">
          <div class="wrapper">
            <ul class="dots">
              <li class="dot" ng-repeat="slide in slides">
                <a href="#" ng-class="{'active':isCurrentSlideIndex($index)}"
                            ng-click="setCurrentSlideIndex($index);">{{slide.title}}</a></li>
            </ul>
          </div>
        </nav>
      </div>
    </div>
      <ul class="list container-half">
        <li class="interest-list"
          ng-controller="InterestController"
          ng-class="{ selected: isSelected }"
          ng-click="switchImgs(interest)"
          ng-model="currentInterest"
          ng-repeat="interest in interests">
          <strong>{{interest.name}}:</strong> <br/>{{interest.description}}
          <div class="link-item"><link-item link="{{item.link}}" title="{{item.title}}" ng-repeat="item in interest.links"></link-item></div>
        </li>
      </ul>
  </div>
</div>
